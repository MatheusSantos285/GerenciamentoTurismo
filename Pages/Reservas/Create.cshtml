@page
@model GerenciamentoTurismo.Pages_Reservas.CreateModel

@{
    ViewData["Title"] = "Nova Reserva";
}

<h1>Nova Reserva</h1>
<h4>Selecione o Cliente e o Pacote</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.ClienteId" class="control-label">Cliente</label>
                <select asp-for="Reserva.ClienteId" class="form-control" asp-items="Model.ClientesSL">
                    <option value="">-- Selecione um Cliente --</option>
                </select>
                <span asp-validation-for="Reserva.ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.PacoteTuristicoId" class="control-label">Pacote Turístico</label>
                <select asp-for="Reserva.PacoteTuristicoId" class="form-control" asp-items="Model.PacotesTuristicosSL">
                    <option value="">-- Selecione um Pacote --</option>
                </select>
                <span asp-validation-for="Reserva.PacoteTuristicoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
