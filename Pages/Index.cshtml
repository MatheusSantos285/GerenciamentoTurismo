@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo à Agência de Turismo</h1>
    <p>Painel de controle com o resumo das operações.</p>
</div>

<hr />

<div class="row mt-4">
    <!-- Card Total de Clientes -->
    <div class="col-md-3 mb-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users me-2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                    Total de Clientes
                </h5>
                <p class="display-4 fw-bold">@Model.DashboardStats.TotalClientes</p>
                <a asp-page="/Clientes/Index" class="btn btn-outline-primary">Gerir Clientes</a>
            </div>
        </div>
    </div>

    <!-- Card Total de Pacotes -->
    <div class="col-md-3 mb-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-briefcase me-2"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
                    Total de Pacotes
                </h5>
                <p class="display-4 fw-bold">@Model.DashboardStats.TotalPacotes</p>
                <a asp-page="/PacotesTuristicos/Index" class="btn btn-outline-secondary">Gerir Pacotes</a>
            </div>
        </div>
    </div>

    <!-- Card Total de Reservas -->
    <div class="col-md-3 mb-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar me-2"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                    Total de Reservas
                </h5>
                <p class="display-4 fw-bold">@Model.DashboardStats.TotalReservas</p>
                <a asp-page="/Reservas/Index" class="btn btn-outline-success">Gerir Reservas</a>
            </div>
        </div>
    </div>

    <!-- Card Próximas Viagens -->
    <div class="col-md-3 mb-4">
        <div class="card text-center h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-send me-2"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
                    Próximas Viagens
                </h5>
                <p class="display-4 fw-bold">@Model.DashboardStats.PacotesFuturos</p>
                <a asp-page="/PacotesTuristicos/Index" class="btn btn-outline-info">Ver Pacotes</a>
            </div>
        </div>
    </div>
</div>