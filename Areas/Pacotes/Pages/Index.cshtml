@page
@model GerenciamentoTurismo.Areas.Pacotes.Pages.IndexModel
@{
    ViewData["Title"] = "Pacotes Turísticos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <!-- Link para a página de Criação, dentro da mesma Area -->
    <a asp-area="Pacotes" asp-page="./Create" class="btn btn-primary">Criar Novo Pacote</a>
</p>

@if (Model.PacotesTuristicos != null && Model.PacotesTuristicos.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PacotesTuristicos[0].Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PacotesTuristicos[0].DataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PacotesTuristicos[0].Preco)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PacotesTuristicos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicio)
                    </td>
                    <td>
                        @item.Preco.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                    </td>
                    <td>
                        <!-- Links de ação para cada item -->
                        <a asp-area="Pacotes" asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
                        <a asp-area="Pacotes" asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalhes</a> |
                        <a asp-area="Pacotes" asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4">
        <p>Nenhum pacote turístico encontrado. Clique em "Criar Novo Pacote" para adicionar o primeiro!</p>
    </div>
}


